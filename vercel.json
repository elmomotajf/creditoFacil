{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/public/(.*)",
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "FIREBASE_PROJECT_ID": "",
    "FIREBASE_PRIVATE_KEY": "",
    "FIREBASE_CLIENT_EMAIL": "",
    "FIREBASE_DATABASE_URL": "",
    "FIREBASE_STORAGE_BUCKET": "",
    "JWT_SECRET": "",
    "AWS_REGION": "",
    "AWS_ACCESS_KEY_ID": "",
    "AWS_SECRET_ACCESS_KEY": "",
    "AWS_S3_BUCKET": "",
    "NODE_ENV": "production"
  }
}
